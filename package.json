{
  "author": "soda <projects@soda.zone>",
  "bugs": "https://github.com/sodazone/ocelloids/issues",
  "description": "Software development kit for building monitoring applications for Substrate networks.",
  "engines": {
    "node": ">=18.14"
  },
  "homepage": "https://github.com/sodazone/ocelloids#readme",
  "jest": {
    "preset": "ts-jest/presets/js-with-ts-esm",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    }
  },
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sodazone/ocelloids.git"
  },
  "sideEffects": false,
  "type": "module",
  "version": "0.0.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run shx rm -rf lib && node build.mjs",
    "postbuild": "tsc --build tsconfig.build.json && yarn workspaces run shx rm -rf lib/tsconfig*buildinfo",
    "docs": "typedoc packages/**",
    "lint": "eslint --cache --fix \"packages/**/src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@polkadot/dev": "^0.75.21",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "esbuild": "^0.18.3",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.3"
  }
}
