{
  "sideEffects": false,
  "type": "module",
  "version": "0.0.1-dev.1",
  "author": "soda <projects@soda.zone>",
  "contributors": [
    "Marc Forn√≥s <marc@soda.zone>",
    "Xueying Wang <xueying@soda.zone>"
  ],
  "bugs": "https://github.com/sodazone/ocelloids/issues",
  "description": "Software development kit for building monitoring applications for Substrate networks.",
  "engines": {
    "node": ">=18.14"
  },
  "homepage": "https://github.com/sodazone/ocelloids#readme",
  "jest": {
    "preset": "ts-jest/presets/js-with-ts-esm",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "test/lib"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    }
  },
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sodazone/ocelloids.git"
  },
  "workspaces": [
    "packages/*",
    "apps"
  ],
  "scripts": {
    "build": "yarn workspaces foreach run build",
    "docs": "typedoc",
    "lint": "eslint --cache --fix \"packages/**/src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@polkadot/dev": "^0.75.21",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsup": "^7.0.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.3"
  },
  "packageManager": "yarn@3.6.0"
}
