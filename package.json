{
  "name": "@soda/ocelloids",
  "version": "0.0.1",
  "description": "Software development kit for building monitoring applications for Substrate networks.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "index.d.ts",
  "type": "module",
  "typesVersions": {
    ">=0.0.1": {
      "*": [
        "dist/types/*"
      ]
    }
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "node": "./dist/cjs/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "lint:fix": "eslint --cache --fix \"src/**/*.ts\"",
    "build": "tsc -b ./src/tsconfig.cjs.json ./src/tsconfig.esm.json ./src/tsconfig.types.json",
    "build:clean": "shx rm -rf ./dist",
    "build:package": "npm run build:clean && npm run compile",
    "build:watch": "tsc -b ./src/tsconfig.cjs.json ./src/tsconfig.esm.json ./src/tsconfig.types.json --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "docs": "typedoc src/index.ts"
  },
  "author": "soda <projects@soda.zone>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "cbor-x": "^1.5.3",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.3"
  },
  "files": [
    "dist/cjs/**/!(*.tsbuildinfo)",
    "dist/esm/**/!(*.tsbuildinfo)",
    "dist/types/**/!(*.tsbuildinfo)",
    "apis",
    "operators",
    "configuration",
    "src",
    "LICENSE",
    "package.json",
    "README.md",
    "tsconfig.json"
  ],
  "dependencies": {
    "@polkadot/api": "^10.9.1",
    "@polkadot/util": "^12.3.2",
    "rxjs": "^7.8.1"
  }
}
