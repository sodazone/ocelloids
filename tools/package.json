{
  "name": "@sodazone/ocelloids-tools",
  "version": "1.2.1",
  "description": "Ocelloids development tools.",
  "sideEffects": false,
  "private": true,
  "type": "module",
  "author": "soda <projects@soda.zone>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "directory": "tools",
    "url": "https://github.com/sodazone/ocelloids.git"
  },
  "bin": {
    "octools": "dist/main.cjs"
  },
  "dependencies": {
    "@sodazone/ocelloids": "1.2.1",
    "@sodazone/ocelloids-test": "1.2.1",
